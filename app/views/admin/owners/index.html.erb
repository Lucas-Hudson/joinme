<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
<h2 class="text-center">Manage Owners</h2>
<br>
<br>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>id</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Created at</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user|%>
        <tr>
        <td><%=user.id%></td>
        <td><%=user.first_name%></a></td>
        <td><%=user.last_name%></td>
        <td><%=user.email%></td>
        <td><%=user.created_at%></td>        
        <td> <%= link_to "Remove owner rights", admin_owner_path(user.id), method:'patch' %> </td>
      </tr>
    <% end %>
      </tbody>
  </table>
</div>
<br><br><br><br><br><br><br><br><br>
<div class="col-md-4"></div>
<div class="container col-md-4 d-flex align-items-center">
  <%= form_tag(admin_owners_path) do %>
    <h3 class="h3 mb-3 font-weight-normal text-center">Add an owner</h3>
    <br>
    <div class="form-group">
      <%= label_tag("Email") %>
      <%= text_field_tag(:email, nil, class: "form-control") %>
    </div>

    <div class="actions text-center">
      <%= submit_tag("Add as owner", class: "btn btn-outline-primary") %>
    </div>
  <% end %>
</div>
<div class="col-md-4"></div>
 

</main>
</div>
</div>



