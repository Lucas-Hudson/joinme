<div class="my-bg-grey" style="height:100vh">

<br>
<div class="container">
  <div class="row align-items-center">
    <div class="col-">
      <h2>Invitations en attente</h2>
    </div>
    <div class="col">
    </div>
    <div class="col-">
      <%= link_to "Trouver des amis", users_path %>
    </div>
  </div>
</div>

  <div class="container" style="background-color:white">

    <div class="row align-items-center" style="padding:2em">
      <div class="col text-center" style="color:grey">
        <p>Pas de demandes en attente</p>
      </div>
    </div>

  </div>

  <br><br>

  <div class="container">
    <h2>Amis</h2>
  </div>

  <div class="container" style="background-color:white">

    <% @friends.each do |friend| %>
      <%= link_to user_path(friend), style:"text-decoration:none; color:black" do %>
        <div class="row align-items-center">
          <div class="col-">
            <%= image_tag "avatar.jpg", style: "width:4em; border-radius:50%; margin:0.5em" %>
          </div>
          <div class="col">
            <p style="margin:0em"><%= friend.first_name %> <strong><%= friend.last_name %></strong></p>
          </div>
        </div>
        <hr>
      <% end %>
    <% end %>

  </div>



</div>
