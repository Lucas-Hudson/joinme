<div class="my-bg-grey" style="height:100vh">

<br>

  <div class="container">
    <div class="row align-items-center">
      <div class="col-">
        <h2>Trouver des Amis</h2>
      </div>
      <div class="col">
      </div>
      <div class="col-">
        <%= link_to "Voir mes amis", friendships_path %>
      </div>
    </div>
  </div>

  <div class="container" style="background-color:white">

    <% @users.each do |user| %>
        <div class="row align-items-center">

            <div class="col-">
              <%= link_to user_path(user), style:"text-decoration:none; color:black" do %>
              <%= image_tag "avatar.jpg", style: "width:4em; border-radius:50%; margin:0.5em" %>
            </div>

            <div class="col">
              <p style="margin:0em"><%= user.first_name %> <strong><%= user.last_name %></strong></p>
              <% end %>
            </div>

          <div class="col-">
            <%= link_to "Demander en Ami", root_path, class:"btn btn-primary", style:"margin-right:2em" %>
          </div>

        </div>
      <hr>
      <% end %>

</div>
