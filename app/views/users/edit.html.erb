<div class="container">
  <div class="row">
    <div class="col-md-3 offset-md-3"></div>
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for @user,  url: user_path, html: { class: "form-signin mt-3" } do |f| %>
      <h1 class="h3 mb-3 font-weight-normal text-center">Edit profile</h1>


      
      <div class="form-group">
        <%= f.label :first_name, "First_name" %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name, "Last_name" %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
      </div>
      <div><%= f.label :date_of_birth %><br />
        <%= f.date_select :date_of_birth %></div>
      <div class="field">

      <div class="form-group">
        <%= f.label 'avatar' %>
        <%= f.file_field 'avatar' %>
      </div> 

        <div class="actions mt-5">
          <%= f.submit "Update", class: "btn btn-lg btn-primary btn-block" %>
        </div>
        <% end %>
      </div>
      <div class="col-md-3 offset-md-3"></div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <p> <br> <br> <br> <br> <br> <br></p>
    </div>
  </div>