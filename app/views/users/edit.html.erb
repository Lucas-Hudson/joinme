<div class="center-it-all">
    <%= form_for @user,  url: user_path, html: { class: "form-signin mt-3" , style: "width:35%" }  do |f| %>
    <%= image_tag("joinmeP.jpg", alt: "Avatar", class: "avatar border",  style:"display:flex")%>
          <div class="btn-image btn-warning " >
              <label class="text-center-btn"> Edit photo
                    <span style="display:none;">
                      <%= f.file_field 'avatar', required: true, multiple: true, name: 'picture' %>
                    </span>    
              </label>  
          </div>

          <h1 class="h3 mb-3 font-weight-normal center-it-all ">Editing your profil</h1>

          <div class="mt-2 ">
            <%= f.label :first_name, "First_name" %><br/>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
          </div>
          
          <div class="mt-2">  
            <%= f.label :last_name, "Last_name" %><br/>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" , class: "form-control" %>
          </div>
          
          <div class="mt-2">
            <%= f.label :date_of_birth %><br/>
            <%= f.date_select :date_of_birth %>
          </div>
           
          <div class="mt-4">
            <%= f.submit "Update", class: "btn btn-lg btn-primary btn-block my-primary-gradient", style: "border-radius:50px; margin-top:12px" %>
          </div>

    <% end %>    
</div>
  

