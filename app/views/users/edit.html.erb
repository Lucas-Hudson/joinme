<div class="container">
  <div class="row">
    <div class="col-md-3 offset-md-3"></div>
    <div class="col-md-6 offset-md-3">
<br><br>
      <%= form_for @user,  url: user_path, html: { class: "form-signin mt-3" } do |f| %>
      <h1 class="h3 mb-3 font-weight-normal text-center">Modifier Profil</h1>

      <%= image_tag url_for(avatar(@user)), style:"display:flex; width:10em; height:10em; object-fit:cover; border-radius:50%; margin: auto" %>
<br>
      <div class="form-group">
        <div class="col text-center">
          <label class= "btn btn-warning" style="border-radius:1em">
            <span style="padding-top: -1em">Changer Photo</span>
            <span style="display:none"><%= f.file_field 'avatar' %></span>
          </label>

        </div>
      </div>


      <div class="form-group">
        <%= f.label :first_name, "PrÃ©nom" %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name, "Nom" %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
      </div>
      <div><%= f.label :date_of_birth, "Date de Naissance" %><br />
        <%= f.date_select :date_of_birth, :order => [:day, :month, :year], :start_year => 1900, :end_year => Time.now.year %></div>
      <div class="field">

        <div class="actions mt-5">
          <%= f.submit "Update", class: "btn btn-lg btn-primary btn-block my-primary-gradient", style: "border-radius:50px; margin-top:12px" %>
        </div>
        <% end %>
      </div>
      <div class="col-md-3 offset-md-3"></div>
    </div>
  </div>
