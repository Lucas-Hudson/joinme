<div class="row w-100" style=" min-width:50em">
  <div id="hide" class="col-2">
    <%= link_to root_path do %>
    <%= image_tag "logo.png", style: 'width:8em; margin:0.6em; margin-left:2em' %>
    <% end %>
  </div>
  <div class="col">
    <div class="row h-100 text-center align-items-center justify-content-end">
      <%= link_to root_path do %>
        <div class="col- my-primary-blue"><%= image_tag "nav-home-on.svg", style: 'width:5.8em; padding-left:4em' %><span style="margin-left:10px">Home</span></div>
      <% end %>

<!-- Inbox with dropdown ------------------------------------ -->

    <div class="nav-item dropdown">
      <a class="text-decoration-none my-primary-grey" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <!-- Notification column in the global header row -->
      <div class="col-">
        <!-- Row to contain two columns for the img and text -->
        <div class="row align-items-center">
          <!-- Img column -->
          <div class="col-">
            <!-- Img -->
            <%= image_tag "nav-inbox-on.svg", style: 'width:5.8em; padding-left:4em' %>
            <!-- Notification -->
            <span style="position: absolute; left:5.5em;" class="badge badge-danger"><%= @invitations_as_admin.count + @invitations_as_guest.count %></span>
          </div>
          <!-- Text column -->
          <div class="col-">
            <span class="nav-link dropdown-toggle">Inbox</span>
          </div>
        </div>
      </div>
      <!-- Dropdown elements -->
      <div class="dropdown-menu dropdown-menu-right scrollable-menu" aria-labelledby="navbarDropdown" style="width:30em">
        <h6 class="dropdown-header">Mes Invitations</h6>
          <% @invitations_as_admin.each do |invitation|%>
            <%= render 'invitations/invitation', invitation: invitation %>
          <% end %>
        <h6 class="dropdown-header">Invitations Re√ßues</h6>
          <% @invitations_as_guest.each do |invitation|%>
            <%= render 'invitations/invitation', invitation: invitation.invitation %>
          <% end %>

      </div>
    </a>
    </div>

<!-- Notification with dropdown ------------------------------------ -->

      <div class="nav-item dropdown">
        <a class="text-decoration-none my-primary-grey" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <!-- Notification column in the global header row -->
        <div class="col-">
          <!-- Row to contain two columns for the img and text -->
          <div class="row align-items-center">
            <!-- Img column -->
            <div class="col-">
              <!-- Img -->
              <%= image_tag "nav-notification-on.svg", style: 'width:5.8em; padding-left:4em' %>
              <!-- Notification -->
              <span style="position: absolute; left:5.5em;" class="badge badge-danger"><%= @notifications.count%></span>
            </div>
            <!-- Text column -->
            <div class="col-">
              <span class="nav-link dropdown-toggle">Notification</span>
            </div>
          </div>
        </div>
        <!-- Dropdown elements -->
        <div class="dropdown-menu dropdown-menu-right scrollable-menu" aria-labelledby="navbarDropdown" style="width:30em">
          <% @notifications.each do |notification|%>
            <%= render 'notifications/notification', notification: notification %>
          <%end%>
          <div class="text-center" style= "margin-top:0.4em">
            <a href="#">More</a>
          </div>
        </div>
      </a>
    </div>

<!-- Profile with dropdown ------------------------------------ -->

      <div class="nav-item dropdown">
      <a class="text-decoration-none my-primary-grey" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <!-- Notification column in the global header row -->
        <div class="col-">
          <!-- Row to contain two columns for the img and text -->
          <div class="row align-items-center">
            <!-- Img column -->
            <div class="col-">
              <!-- Img -->
              <%= image_tag "nav-profile-off.svg", style: 'width:5.8em; padding-left:4em' %>
            </div>
            <!-- Text column -->
            <div class="col-">
              <span class="nav-link dropdown-toggle">Profile</span>
            </div>
          </div>
        </div>
        <!-- Dropdown elements -->
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "View Profile", user_path(current_user), class: "dropdown-item", method: :get %>
        <div class="dropdown-divider"></div>
          <%= link_to "Log Out", destroy_user_session_path, class: "dropdown-item", method: "delete" %>
        </div>
      </a>
    </div>

    </div>
  </div>
</div>
