<!-- Bloc Venues -->
<div class="container" style="min-width:70em">

    <div class="row">

<!-- Si aucun Venue, afficher "Pas de Venues créés...", sinon afficher "Ambiances Live" -->
      <% if @venues == nil %>
        <div class="col text-center">
          <h2 style="color:grey">Pas de Venues créés...</h2>
        </div>
      <% else %>
      <div class="col-12">
        <h3 style="padding-left:1em"><strong>Ambiances Live</strong></h3><br>
      </div>
      <% end %>

<!-- Afficher toutes les Venues -->
      <% @venues.each do |venue|%>
        <div class="col-4" style="padding-bottom:2em">
          <%= render 'venue', venue: venue %>
        </div>
      <% end %>

    </div>

</div>
