<!-- Image bannière -->
<div style="min-width:100%; height:35vh; background-size: cover; background-repeat: no-repeat; background-image: url('https://joinme-thp.s3-eu-west-1.amazonaws.com/home_banner_text.jpg')"></div>

<br><br>

<!-- Bloc Venues -->
<div class="container" style="min-width:70em">

    <div class="row">

<!-- Si aucun Venue, afficher "Pas de Venues créés...", sinon afficher "Ambiances Live" -->
      <% if @venues == nil %>
        <div class="col text-center">
          <h2 style="color:grey">Pas de Venues créés...</h2>
        </div>
      <% else %>
      <div class="col-12">
        <h3 style="padding-left:1em"><strong>Ambiances Live</strong></h3><br>
      </div>
      <% end %>

<!-- Afficher toutes les Venues -->
      <% @venues.each do |venue|%>
        <div class="col-4" style="padding-bottom:2em">
          <%= render 'venue', venue: venue %>
        </div>
      <% end %>

    </div>

</div>
