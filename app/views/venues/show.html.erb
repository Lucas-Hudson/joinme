<!-- Desktop View -->
<% if mobile_device == "desktop" %>

<div style="padding:2em; background-color: black">



  <div class="container-fluid" style="width:75em; background-color: black">
    <div class="row">

      <div class="col" style="margin:0; padding:0em">
        <%= video_tag(url_for(@venue.video), style: "width:100%; height:100%; object-fit:cover", poster: url_for(@venue.thumbnail), autoplay: "true", controls: "true", muted: "true") %>
      </div>

      <div class="col"
        style="margin:0 0.2em; padding:0em; width:100%; background-image: url(<%= url_for(@venue.images[0]) %>); background-size: cover">
      </div>

      <div class="col-2" style="margin:0 0.2em; padding:0em">

        <div class="row"
          style="margin:0em; margin-bottom:0.4em; padding:0em; height:49.4%; width:100%; background-image: url(<%= url_for(@venue.images[1]) %>); background-size: cover">
        </div>

        <div class="row"
          style="margin:0em; padding:0em; height:49.4%; width:100%; background-image: url(<%= url_for(@venue.images[2]) %>); background-size: cover">
        </div>

      </div>

      <div class="col"
        style="margin:0 0.2em; padding:0em; width:100%; background-image: url(<%= url_for(@venue.images[3]) %>); background-size: cover">
      </div>

    </div>

  </div>



<div class="container">
  <div class="row align-items-center" style="height:250px; color:white">
    <div class="col-4">
      <div class="row">
        <h2><strong><%= @venue.name %></strong></h2>
      </div>
      <div class="row">
        <small><%= @venue.address %>, <%= @venue.zip_code %> <%= @venue.city %></small>
      </div>
      <div class="row">
        <small>Ouvert jusqu’à 01:00</small>
      </div>
      <br>
      <div class="row align-items-center" style="padding:0.3em 0.5em">
        <% @venue.participants.last(5).each do |participant| %>
          <div class="col-">
            <%= link_to user_path(participant), style: "color: black; text-decoration:none" do %>
              <%= image_tag url_for(avatar(participant)), class:"avatar-sm", style:"margin-right:-0.5em" %>
            <% end %>
          </div>
        <% end %>
        <% if @venue.participants.count < 6 %>
          <div class="col">
            <p class="post-subtitle" style="self-align-center; line-height:2.2em"><%= @venue.participants.count %> participants.</p>
          </div>
        <% else %>
        <div class="col">
          <p class="post-subtitle" style="self-align-center; line-height:2.2em"> et <%= @venue.participants.count - 5 %> participants.</p>
        </div>
        <% end %>
      </div>
    </div>
    <div class="col">
      <div class="row">
        <h5 style="font-weight:700">Description</h5>
      </div>
      <div class="row">
        <p><%= @venue.description %></p>
      </div>
      <br>
      <div class="row">
        <div class="col-">
          <% @venue.tags.each do |tag| %>
            <div class="btn btn-primary mr-2">
              <%= tag.tag_content %>
            </div>
          <% end %>

        </div>

      </div>
    </div>
  </div>
</div>
</div>
<br>





<br><br>

