    <div class="row align-items-center" style="height:4em">
      <div class="col-">
        <%= image_tag url_for(avatar(@venue)), class:"avatar-bg", style: "margin-right:1em" %>
      </div>
      <div class="col-">
        <p style="margin:0em; margin-right:1em"><%= @venue.name %></p>
      </div>
      <% if @venue.owner == current_user %>
      <div class="col-">
        <%= link_to "Edit Venue", edit_venue_path(@venue), class:"btn btn-outline-primary" %>
      </div>
      <% end %>
      <div class="col">
      </div>
