        <%= image_tag "share-btn.svg", style: "width:1em; margin-bottom:0.2em" %>
      </div>
      <% end %>
      <%= link_to venue_invitations_path(@venue.id), method: :post do %>
      <div class="col- btn btn-outline-success" style="width:10em; margin-left:1em">
        <span>Join</span>
        <%= image_tag "join-btn.svg", style: "width:0.8em; margin-bottom:0.2em" %>
      </div>
      <% end %>


    </div>

  </div>
